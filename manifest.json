{
    "manifest_version": 2,
    "name": "SteamSubscList",
    "version": "1.0.0",
    "description": "Save Steam's subscription as CSV.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://steamcommunity.com/id/*/myworkshopfiles/*",
                "https://steamcommunity.com/profiles/*/myworkshopfiles/*"
            ],
            "js": ["js/index.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ]
}